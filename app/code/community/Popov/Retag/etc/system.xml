<?xml version="1.0" ?>
<config>
	<tabs>
		<popov module="popov_retag" translate="label">
			<label>Popov's Modules</label>
			<sort_order>10000</sort_order>
		</popov>
	</tabs>

	<sections>
		<popov_retag module="popov_retag" translate="label">
